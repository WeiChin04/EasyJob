<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userJobAppliedCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvPostingDataTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/applied_date_title" />

            <TextView
                android:id="@+id/tvAppliedDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/posting_date"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="15dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="124dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/employer_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tvShowViewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/viewed"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvShowJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/example_job_title"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvShowJobType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/example_job_type"
                    android:textColor="@color/light_green" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShowJobAppliedStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:text="@string/example_job_applied_status"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>