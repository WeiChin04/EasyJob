<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicantCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvPostingDataTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/applied_date_title" />

            <TextView
                android:id="@+id/tvShowApplyDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/posting_date"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="15dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="124dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgApplicant"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/applicant_image"
                    tools:ignore="ImageContrastCheck"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"

                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvShowApplicantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/example_applicant_name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvShowApplicantContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/example_contact"
                    android:textColor="@color/light_green" />

                <TextView
                    android:id="@+id/tvShowApplicantEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/example_email"
                    android:textColor="@color/light_green" />

                <TextView
                    android:id="@+id/tv_next_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:text=""
                    app:drawableStartCompat="@drawable/ic_arrow_right" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShowStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:text="@string/example_apply_status"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>