<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.FavouriteJobFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/Theme.EasyJob"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorOnPrimary"
            android:textAlignment="center"
            app:popupTheme="@style/Theme.EasyJob"
            app:titleMarginStart="115dp"
            app:titleTextColor="@color/green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_job_page_title"
                android:layout_gravity="center"
                style="@style/toolbar_Title" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myJobAppliedList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:listitem="@layout/job_item_user" />

    <TextView
        android:id="@+id/etNoFavouriteJobShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_no_favourite_job_added"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/myJobAppliedList"
        app:layout_constraintEnd_toEndOf="@+id/myJobAppliedList"
        app:layout_constraintStart_toStartOf="@+id/myJobAppliedList"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
