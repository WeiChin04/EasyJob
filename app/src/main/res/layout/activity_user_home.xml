<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContentPageBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserHome">

    <TextView
        android:id="@+id/tvt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvhome"
        app:layout_constraintStart_toStartOf="@+id/tvhome"
        app:layout_constraintTop_toBottomOf="@+id/tvhome" />

    <TextView
        android:id="@+id/tvhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="User Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/ButtonGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="@+id/tvt"
        app:layout_constraintStart_toStartOf="@+id/tvt"
        app:layout_constraintTop_toBottomOf="@+id/tvt" />

</androidx.constraintlayout.widget.ConstraintLayout>