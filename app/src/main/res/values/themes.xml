<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyJob" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#CC004932</item>
        <item name="colorControlNormal">@color/green</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="PageBackground">
        <item name="android:background">#F8FAFC</item>
    </style>

    <style name="ContentPageBackground">
        <item name="android:background">#1A004932</item>
    </style>

    <style name="toolbar_Title">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="textview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myWalletTextview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myWalletSubTextview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/hint_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myWalletHistoryTextview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myWalletHistoryMoneyTextview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myWalletHistorySubTextview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ADTextview">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_heading">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">#004932</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_heading_hint">
        <item name="android:textColorHint">#B3004932</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">#004932</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StartPageTitle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#373737</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonGreen">
        <item name="backgroundTint">#CC004932</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="InputField">
        <item name="android:background">@drawable/custom_input_field</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">#757575</item>
    </style>

    <style name="MyWalletButton">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">10dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreenStoke">
        <item name="android:background">@drawable/custom_bg_button_stroke</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">10dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreenStoke2">
        <item name="android:background">@drawable/custom_bg_button_stroke</item>
        <item name="backgroundTint">@color/red</item>
        <item name="strokeWidth">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ButtonTimePicker">
        <item name="android:background">@drawable/custom_bg_button_timepicker</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">10dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreen2">
        <item name="android:background">@drawable/custom_bg_button</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_border">
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textColorHint">@color/hint_green</item>
    </style>

    <style name="input_edit_field">
        <item name="android:background">@drawable/shadow_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:textColorHint">@color/hint_green</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="view_shadow">
        <item name="android:background">@drawable/shadow_background</item>
    </style>

    <style name="spinner">
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Theme.EasyJob.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EasyJob.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyJob.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MySpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MySpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>




</resources>